module ping {
  yang-version 1;
  namespace "urn:cttc:params:xml:ns:yang:ping";
  prefix ping;

  import ietf-inet-types {
    prefix inet;
  }

  organization
    "CTTC";
  contact
    "Laura Rodriguez <laura.rodriguez@cttc.es>";
  description
    "YANG version of the ping.";

  revision "2013-02-02" {
    description "TCP ping module";
  }

  rpc send-echo {
    description "Send TCP ECHO request";
    input {
      leaf destination {
        type inet:ipv4-address;
      }
    }
    output {
      leaf echo-result {
        type enumeration {
          enum "reachable" {
            value 0;
            description "Received reply";
          }
          enum "unreachable" {
            value 1;
            description "No reply during timeout";
          }
          enum "error" {
            value 2;
            description "Error happened";
          }
        }
        description "Result types";
      }
    }
  }
}